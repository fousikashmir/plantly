<%- include('../partials/users/header.ejs') %>
    
    
    <!-- Breadcrumb Section Begin -->
    <section class="breadcrumb-section set-bg">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 text-center">
                    <div class="breadcrumb__text">
                        
                        <div class="breadcrumb__option">
                            <a href="/">Home</a>
                            <a href="/cart">/Wish List</a>
                            <span>Wish List</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Breadcrumb Section End -->

    <section class="shoping-cart spad">
        <div class="container">
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__table">
                        <table>
                            <thead>
                                <tr>
                                    <th class="shoping__product">Plant</th>
                                    <th>Rate</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                <% products.forEach((value,index)=>{%>
                                    <tr>
                                        <td class="shoping__cart__item">
                                            <img src="../productimages/<%=value.productId.image[0]%>" width="80px"
                                                height="80px" alt="">
                                            <h5>
                                               â‚¹<%=value.productId.name%>
                                            </h5>
                                        </td>
                                        <td class="shoping__cart__price">
                                            <%=value.productId.price%>
                                        </td>
                                        <td class="shoping__cart__quantity">
                                            <div class="quantity">
                                                <div>
                                                   
                                                    
                                                    <button class="primary-btn"
                                                        onclick="wishToCart('<%=value.productId._id%>')">ADD TO
                                                        CART</button>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="shoping__cart__item__close">
                                            <div>
                                                <div>
                                                    <button onclick="deleteWishlistItem('<%= value.productId._id %>')">DELETE</button>
                                                </div>
                                            </div>
                                        </td>
                                        

                                    </tr>
                                    <%})%>

                            </tbody>
                        </table>
                    </div>
                </div>


            </div>
            <div class="row">
                <div class="col-lg-12">
                    <div class="shoping__cart__btns">
                        <a href="/" class="primary-btn cart-btn">CONTINUE SHOPPING</a>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- Shoping Cart Section End -->

    <script>
        function wishToCart(id) {
            console.log(id)
            $.ajax({
                url: '/wishtoCart',
                method: 'post',
                data: {
                    id: id
                },
                success: (response) => {
                    if (response.success) {
                        location.href = "/cart"
                    }
                },
                error: (xhr) => {
                    if (xhr.status === 401) {
                        window.location.href = '/login';
                    } else if (xhr.status === 400) {
                        const response = xhr.responseJSON;
                        swal.fire({
                            position: 'center',
                            icon: 'error',
                            title: response.message,
                            showConfirmButton: false,
                            timer: 2000
                        });
                    }
                }

            })
        }
    


    
        function deleteWishlistItem(productid) {
    console.log("Function triggered");
    console.log("Product ID being deleted:", productid);

    Swal.fire({
        title: "Are you sure?",
        text: "You won't be able to revert this!",
        icon: "warning",
        showCancelButton: true,
        confirmButtonColor: "#3085d6",
        cancelButtonColor: "#d33",
        confirmButtonText: "Yes, delete it!",
        cancelButtonText: "Cancel",
    }).then((result) => {
        if (result.isConfirmed) {
            fetch(`/removewishproduct?id=${productid}`, {
                method: 'DELETE'
            })
            .then(response => response.json())
            .then(data => {
                console.log("Server response:", data);
                if (data.remove) {
                    location.reload();
                } else {
                    Swal.fire('Error', data.message || 'Failed to delete the item from the wishlist.', 'error');
                }
            })
            .catch(error => {
                console.error('Fetch error:', error);
                Swal.fire('Error', 'An error occurred while removing the item.', 'error');
            });
        }
    });
}


</script>
<%- include('../partials/users/footer.ejs') %>