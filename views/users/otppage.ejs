
<%- include('../partials/users/loginheader.ejs') %>
<style>
    .login_box_area {
    padding: 50px 0;
    background-color: #f7f7f7; 
}

.login_form_inner {
    background-color: #ffffff;
    padding: 30px;
    border-radius: 10px;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
}

.login_form_inner h3 {
    font-size: 24px;
    margin-bottom: 20px;
    color: #333;
    text-align: center;
}

.login_form_inner .form-group {
    margin-bottom: 20px;
}

.login_form_inner .form-control {
    width: 100%;
    padding: 10px;
    border: 1px solid #ccc;
    border-radius: 5px;
    box-sizing: border-box;
    font-size: 16px;
}

.login_form_inner .form-control:focus {
    border-color: #5b9be2;
    outline: none;
}

.login_form_inner .button-register {
    background-color: #5b9be2;
    color: #fff;
    border: none;
    padding: 10px;
    border-radius: 5px;
    cursor: pointer;
    font-size: 16px;
    width: 100%;
}

.login_form_inner .button-register:hover {
    background-color: #4a85d5;
}

#countdown-timer {
    text-align: center;
    margin-top: 10px;
    color: #333;
}

h4 {
    text-align: center;
    color: #e74c3c; /* Red color for error messages */
}
</style>
       

<section class="login_box_area section-margin">
    <div class="container">
        <div class="row">
            <div class="col-lg-6">
                <div class="login_form_inner register_form_inner">
                    <h3>Enter OTP</h3>
                    <br>
                    <form class="row login_form" action="" method="post" id="register_form">
                        
                        <div class="col-md-12 form-group">
                            <input type="text" class="form-control" id="otp" name="otp"
                                placeholder="Enter otp" onfocus="this.placeholder = ''"
                                onblur="this.placeholder = 'enter otp Address'">
                                
                        </div>
                        
                        <div class="col-md-12 form-group">
                            <button type="submit" value="submit"
                                class="button button-register w-100">submit</button>
                        </div>
                        <p style="color:rgb(8, 8, 8);" id="countdown-timer">OTP will expire in <span id="countdown">30</span>Â seconds.</p>
                    </form>
                    <% if(typeof message !=='undefined' ){ %>
                        <h4>
                          <%= message %>
                        </h4>
                        <% } %>
                </div>
            </div>
        </div>
    </div>
</section>
<!--================End Login Box Area =================-->


<script>
    function startTimer(duration, display) {
      var timer = duration, minutes, seconds;
      setInterval(function () {
          minutes = parseInt(timer / 60, 10)
          seconds = parseInt(timer % 60, 10);
  
          minutes = minutes < 10 ? "0" + minutes : minutes;
          seconds = seconds < 10 ? "0" + seconds : seconds;
  
          display.textContent = minutes + ":" + seconds;
  
          if (--timer < 0) {
              timer = duration;
          }
      }, 1000);
  }
  
  var countdown = document.getElementById("countdown");
  var countdownTimer = document.getElementById("countdown-timer");
  
  startTimer(30, countdown);
  // Update timer element and display message when OTP expires
  function countdownExpired() {
    countdownTimer.innerHTML = 'OTP has expired. Resend the OTP <a href="/resend-otp">here</a>.';
  
  }
  
  setTimeout(countdownExpired, 30000);
  </script>

</body>

</html>