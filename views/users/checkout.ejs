                                                document.getElementById('discount').innerHTML = '0';
                                                document.getElementById('total1').innerHTML = response.totalAmount;
                                                Swal.fire({
                                                    title: 'Coupon Removed',
                                                    text: "Coupon removed successfully!",
                                                    icon: 'success'
                                                });
                                            } else {
                                                Swal.fire({
