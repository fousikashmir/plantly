<%- include('../partials/users/header.ejs') %>


    <!-- Checkout Section Begin -->
    <section class="checkout spad" style="background-color: antiquewhite;">
        <div class="container">
            <section class="checkout__form">
                <div class="conatiner">
                    <div class="row">
                        <div class="col-lg-6 col-md-12">
                            <div>
                                <h3>ENTER ADDRESS</h3>
                            </div>
                            <form action="/add-address" method="post">
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Fist Name<span>*</span></p>
                                            <input type="text" name="fname" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Last Name<span>*</span></p>
                                            <input type="text" name="lname" required>
                                        </div>
                                    </div>
                                </div>
                                <div class="checkout__input">
                                    <p>Country<span>*</span></p>
                                    <input type="text" name="country" required>
                                </div>
                                <div class="checkout__input">
                                    <p>State<span>*</span></p>
                                    <input type="text" name="state" required>
                                </div>
                                <div class="checkout__input">
                                    <p>Town/City<span>*</span></p>
                                    <input type="text" name="city" required>
                                </div>
                                <div class="checkout__input">
                                    <p>Address<span>*</span></p>
                                    <input type="text" placeholder="Street Address" class="checkout__input__add" name="address" required>
                                </div>
                               
                                
                                <div class="checkout__input">
                                    <p>Postcode / ZIP<span>*</span></p>
                                    <input type="text" name="pin" required>
                                </div>
                                <div class="row">
                                    <div class="col-lg-6">
                                        <div class="checkout__input">
                                            <p>Phone<span>*</span></p>
                                            <input type="number" name="phone" required>
                                        </div>
                                    </div>
                                    <div class="col-lg-6">
                                        <!-- <div class="checkout__input">
                                            <p>Email<span>*</span></p>
                                            <input type="email" name="email" required>
                                        </div>  -->
                                    </div>
                                </div>
                                <div class="checkout__input">
                                    <button class="primary-btn">SUBMIT</button>
                                </div>
                            </form>

                        </div>
                    </div>
                </div>
            </section>
        </div>
    </section>
    <!-- Checkout Section End -->

    <%- include('../partials/users/footer.ejs') %>