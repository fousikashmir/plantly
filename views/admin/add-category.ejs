<%- include('../partials/admin/header.ejs') %>
  <!--End topbar header-->
  <div class="clearfix"></div>

  <div class="content-wrapper">
    <div class="container-fluid">

      <div class="row mt-3">
        <div class="col-lg-6">
          <div class="card" style="margin-top: 60px; margin-left: 60px;">
            <div class="card-body">
              <div class="card-title">ADD NEW CATEGORY</div>
              <hr>
              <form method="post">
                <div class="form-group">
                  <label for="input-1">Category Name</label>
                  <input type="text" name="category" required class="form-control" id="input-1" placeholder="Enter category Name">
                </div>

                <div class="form-group">
                  <button type="submit" class="btn btn-light px-5"><i class="icon-lock"></i> ADD</button>
                </div>
              </form>
              <% if(typeof message !=='undefined' ){ %>
                <h6><br>
                  <%= message %>
                </h6>
                <% } %>
            </div>
          </div>
        </div>

      </div><!--End Row-->
     